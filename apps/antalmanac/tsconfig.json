{
    "extends": "tsconfig/base.json",
    "include": ["src"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$actions/*": ["src/actions/*"],
            "$api/*": ["src/api/*"],
            "$components/*": ["src/components/*"],
            "$lib/*": ["src/lib/*"],
            "$providers/*": ["src/providers/*"],
            "$routes/*": ["src/routes/*"],
            "$stores/*": ["src/stores/*"],
        }
    }
}