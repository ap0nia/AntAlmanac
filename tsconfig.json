{
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "baseUrl": ".",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importsNotUsedAsValues": "error",
        "paths": {
            "$components/*": ["src/components/*"],
            "$hooks/*": ["src/hooks/*"],
            "$lib/*": ["src/lib/*"],
            "$providers/*": ["src/providers/*"],
            "$stores/*": ["src/stores/*"],
            "$types/*": ["src/types/*"],
            "$routes/*": ["src/routes/*"],
        }
    }
}
